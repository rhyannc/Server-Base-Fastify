generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model company {
  id        String   @id @default(uuid())
  name      String
  cnpj      String?  @unique
  phone     String?
  city      String?
  state     String?
  country   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User   @relation(fields: [manager], references: [id])
  manager String

  @@map("companys")
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  phone         String?
  password_hash String
  plan          String    @default("free")
  active        Boolean   @default(true)
  created_at    DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  company       company[]

  @@map("users")
}

model rental_item {
  id          String  @id @default(ulid())
  title       String
  description String?
  latitude    Decimal
  longitude   Decimal

  @@map("rental_items")
}

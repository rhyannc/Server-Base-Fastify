generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model company {
  id   String @id @default(ulid())
  name String

  user    User   @relation(fields: [manager], references: [id])
  manager String

  @@map("companys")
}

model User {
  id            String    @id @default(ulid())
  name          String
  email         String    @unique
  password_hash String
  created_at    DateTime  @default(now())
  company       company[]

  @@map("users")
}

model rental_item {
  id          String  @id @default(ulid())
  title       String
  description String?
  latitude    Decimal
  longitude   Decimal

  @@map("rental_items")
}
